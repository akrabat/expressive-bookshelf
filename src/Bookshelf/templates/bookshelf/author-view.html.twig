{% extends '@layout/default.html.twig' %}

{% set title = author.name %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
<h1>{{ title }}</h1>
{{ flash_messages() }}

<p>{{ author.biography }}</p>


<h2>Books</h2>
<ul>
{% for book in author.books %}
    <li>{{ book.title }}</li>
{% endfor %}
</ul>


<p>
    <a href="{{ path('author.list') }}">Return to authors</a>
    | <a href="{{ path('author.edit', {id: author.id}) }}">Edit author's details</a>
</p>

{% endblock %}
